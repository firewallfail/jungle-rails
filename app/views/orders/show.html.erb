<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="panel panel-default items">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th colspan="2">Product</th>
        <th>Unit Price</th>
        <th>Quantity</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
    <% @line_items.each do |line| %>
      <tr>
        <td>
          <%= image_tag @products[line.product_id.to_i - 1].image.tiny.url %>
        </td>
        <td>
          <h4><%= @products[line.product_id.to_i - 1].name %></h4>
          <br>
          <p><%= @products[line.product_id.to_i - 1].description %></p>
        </td>
        <td>
          <%= humanized_money_with_symbol line.item_price_cents / 100.0 %>
        </td>
        <td>
          <%= line.quantity %>
        </td>
        <td>
          <%= humanized_money_with_symbol line.total_price_cents / 100.0 %>
        </td>
      </tr>
    <% end %>
    </tbody>
    <tfoot>
      <tr>
        <th colspan="4">
          TOTAL:
        </th>
        <th>
        <%=humanized_money_with_symbol @order.total_cents / 100.0%>
        </th>
      </tr>
    </tfoot>
  </table>
  </div>

  <h1>Email: <%=@order.email%></h1>
    
  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
